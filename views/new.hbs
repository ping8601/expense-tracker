<div class="card card-body m-5">

  <div class="row mt-3">
    <div class="col-3">
      <p class="note">*必填欄位</p>
    </div>
    <div class="col-9">
      <h4 class="text-center">請輸入你的支出</h4>
    </div>
  </div>

  <form action="/records" method="POST" class="container form-group">

    <div class="row mt-3">
      <div class="col-4">
        <label for="name" class="col-form-label">名稱*：</label>
      </div>
      <div class="col-8">
        <input type="text" id="name" class="form-control" name="name" placeholder="請輸入支出項目名稱..." required>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-4">
        <label for="date" class="col-form-label">日期*：</label>
      </div>
      <div class="col-8">
        <input type="date" id="date" name="date" class="form-control" placeholder="請輸入支出日期...">
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-4">
        <label for="category" class="col-form-label">類別*：</label>
      </div>
      <div class="col-8">
        <select class="form-control" id="category" name="category" required>
          <option selected hidden>請選擇支出種類...</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-4">
        <label for="amount" class="col-form-label">金額*：</label>
      </div>
      <div class="col-8">
        <input type="number" id="amount" name="amount" class="form-control"
          placeholder="請輸入支出金額..." required>
      </div>
    </div>

    <div class="row mt-5">
      <button type="submit" class="btn btn-outline-info btn-block">新增支出</button>
    </div>
  </form>
</div>