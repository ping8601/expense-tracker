<div class="card card-body m-5">
  <h1 class="text-center mt-3">Register</h1>
  <form action="/users/login" method="POST">
    <div class="mb-2">
      <label for="name" class="mb-2">Name</label>
      <input type="text" class="form-control" name="name" id="name" placeholder="請輸入您的名字...">
    </div>
    <div class="mb-2">
      <label for="email" class="mb-2">Email</label>
      <input type="email" class="form-control" name="email" id="email" placeholder="請輸入您的信箱...">
    </div>
    <div class="mb-2">
      <label for="password" class="mb-2">Password</label>
      <input type="password" class="form-control" name="password" id="password" placeholder="請輸入您的密碼...">
    </div>
    <div class="mb-4">
      <label for="confirmPassword" class="mb-2">Confirm Password</label>
      <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="請重新輸入您的密碼...">
    </div>
    <div class="d-grid gap-3">
      <button type="submit" class="btn btn-secondary">Register</button>
    </div>
  </form>
  <p>Already have an account? <a href="/users/login">Login</a></p>
</div>